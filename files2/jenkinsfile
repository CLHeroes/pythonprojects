pipeline {
    agent any
    stages {
        stage("create date fiel") {
            steps {
                sh """
                    date >> ~/date1.txt
                """
            } // steps
        } //stage
        stage("rename date file") {
            steps {
                sh """
                    mv ~/date1.txt ~/today.txt
                """
            } //steps
        } //stage
    } //stages

} //pipeline 
